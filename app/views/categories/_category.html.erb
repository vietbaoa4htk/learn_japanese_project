<div class="col-lg-6 col-xs-12" style="margin-bottom: 25px;">
  <div class="col-xs-6">
      <!-- small box -->
      <div class="small-box bg-aqua">
          <div class="inner">
              <h3>
                  <%=category.words.count%> <small style="color: #fff;"><%= t(".word")%></small>
              </h3>
              <p>
                <%= category.name.capitalize %>
              </p>
          </div>
          <div class="icon" style="padding-bottom: 15px;">
              <i class="ion ion-stats-bars"></i>
          </div>
            <div class="small-box-footer" style="width: 50%; display: inline-block; margin-top: 20px;">
                <%= form_for [category, category.lessons.build] do |f| %>
                  <%= f.submit t(".btn_take"), class: "btn btn-primary" %>
                <% end %>
            </div>
            <div href="#" class="small-box-footer" style="width: 50%; float:right;  margin-top: 20px;">
               <%= button_to t(".btn_gotoword"), category_words_path(category), method: :get, class: "btn btn-primary", style: "width: 100%;" %>
            </div>
      </div>
  </div>
  <div class="col-xs-6">
    <blockquote>
        <% category.words.each do |word| %>
          <% if current_user.admin? %>
            <%= link_to word.content, edit_admin_word_path(word) %>
          <% else %>
            <%= word.content %>
          <% end %>
        <% end %>
      </blockquote>
  </div>
</div>
