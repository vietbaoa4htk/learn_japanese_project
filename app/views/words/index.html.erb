<div class="row">
  <%= form_tag category_words_path(@category.id),
    method: :get, class: "form-inline", id: "filter-form" do %>    
    <div class="form-group">
      <% Settings.category_type.each do |key, type| %>
        <label>
          <%= radio_button_tag :filter_state, type, type == @filter_state, class: "form-control" %>
          <%= t ".#{key}" %>
        </label>
      <% end %>
    </div>
    <div class="form-group">
      <%= submit_tag t(".btn_filter"), class: "btn btn-default" %>
    </div>
  <% end %>
</div>
<hr>
<div class="row", id="word_list">
  <%= render @words %>
</div>
<div class="row">
  <%= will_paginate @words %>
</div>
