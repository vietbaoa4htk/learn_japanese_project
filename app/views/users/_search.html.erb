<% if current_user.admin? %>
  <%= form_tag admin_users_path, method: :get do %>
    <div class="input-group" style="margin-bottom: 10px;">
      <div class="input-group-btn">
        <%= submit_tag t(".btn_search") , {class: "btn btn-primary"} %>
      </div>
      <%= text_field_tag :search, params[:search], placeholder: t(".placeholder"), class: "form-control" %>
    </div>
  <% end %>
<% else %>
  <%= form_tag users_path, method: :get do %>
  <div class="form-group">
    <%= text_field_tag :search, params[:search], placeholder: t(".placeholder"), class: "form-control" %>
    <%= submit_tag t(".btn_search") , {class: "btn btn-primary", style: "margin:10px;"} %>
  </div>
  <% end %>
<% end %>
