<div class="row">
  <aside class="col-md-4 user_info center jumbotron">
    <section class="user_info">
      <aside class="col-md-4">
        <span>
          <%= gravatar_for @user %>
          <%= link_to @user.name, user_path(@user), id: "user-detail" %>
        </span>
        <%= render "follow_form" if logged_in? %>
      </aside>
    </section>
    <section class="stat">
      <%= render "shared/stats" %>
    </section>
  </aside>
</div>
