<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <aside class="col-md-4">
        <%= render @user %>
        <%= render "users/follow_form" if logged_in? %>
      </aside>
    </section>
  </aside>
  <aside class="col-md-4">
    <h4><%= t ".user_role" %></h4>
    <%= select(:user, :role,
      Settings.user.role.collect{|f| [name_of_role(f), f]}) %>
    <%= hidden_field_tag "user_id", @user.id %>
    <%= button_to t(".btn_save"), "#", id: "btn-saves", disabled: true %>
  </aside>
  <aside class="col-md-4">
    <%= button_to t(".btn_reset"), "#", id: "btn-reset" %>
  </aside>
</div>
