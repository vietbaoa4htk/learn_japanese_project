<li class="list-group-item">
  <%= gravatar_for user %>
  <% if current_user? user %>
    <%= link_to user.name, user_path(user), {style: "font-weight: bold; color: black;"} %>
  <% else %>
    <%= link_to user.name, admin_user_path(user), {style: "font-weight: bold; color: black;"} %>
  <% end %>
  <%= user.email %>
  <% unless current_user? user %>
    | <%= link_to t(".btn_delete"), admin_user_path(user), method: :delete,
      data: {confirm: t(".confirm")}, style: "color: red;" %>
    <% if user.blocked? %>
      | <%= link_to t(".btn_unblock"), admin_user_path(user, admin_action: "block"), method: :patch,
        data: {confirm: t(".confirm")}, style: "color: green;" %>
    <% else %>
      | <%= link_to t(".btn_block"), admin_user_path(user, admin_action: "block"), method: :patch,
        data: {confirm: t(".confirm")}, style: "color: red;" %>
    <% end %>
  <% end %>
</li>
