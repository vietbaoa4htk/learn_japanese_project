<header class="header main-header">
  <%= link_to t(".website"), "/", class: "logo" %>
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Navbar Right Menu -->
    <div class="navbar-right">
      <ul class="nav navbar-nav">
        <% if logged_in? %>
        <% if current_user.admin? %>
            <li><%= link_to t(".import/export_file_csv"), admin_words_path %></li>
            <li><%= link_to t(".all_users"), admin_users_path %></li>
          <% else %>
            <li><%= link_to t(".home"), root_path %></li>
            <li><%= link_to t(".all_users"), users_path %></li>
          <% end %>
        <!-- User Account: style can be found in dropdown.less -->
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= gravatar_for current_user , size: 22%>
            <span class="hidden-xs"><%= current_user.name%></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
              <%= gravatar_for current_user , size: 160%>
              <p>
                <%= current_user.name%>
              </p>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to t(".profile"), edit_user_path(current_user), class: "btn btn-default btn-flat" %>
              </div>
              <div class="pull-right">
                <%= link_to t(".log_out"), logout_path, method: "delete", class: "btn btn-default btn-flat" %>
              </div>
            </li>
          </ul>
        </li>
        <% else %>
          <li><%= link_to t(".sign_up"), signup_path %></li>
          <li><%= link_to t(".log_in"), login_path %></li>
        <% end %>
        <li><%= link_to "English", "/en/" %></li>
        <li><%= link_to "Japanese", "/ja/" %></li>
      </ul>
    </div>
  </nav>
</header>
